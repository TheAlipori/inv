---
import Ornamento1 from "../../../assets/icons/Ornamento1.astro";
import SalonIcon from "../../../assets/icons/SalonIcon.astro";
import IglesiaIcon from "../../../assets/icons/IglesiaIcon.astro";
import VestimentaIcon from "../../../assets/icons/VestimentaIcon.astro";
import ImportanteIcon from "../../../assets/icons/ImportanteIcon.astro";
import ClockIcon from "../../../assets/icons/ClockIcon.astro";

import "@fontsource/parisienne";
import "@fontsource/abril-fatface";
import "@fontsource/niconne";
import "@fontsource/damion";
import "@fontsource-variable/merriweather";
const { colorPrimario, colorBackground, misa, recepcion, imagenes } =
  Astro.props;
---

<section class="py-16 px-4" style={`background-color: ${colorBackground}`}>
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <header class="text-center mb-16">
      <h1
        class="font-damion text-5xl md:text-6xl mb-6 text-[#5A5A5A]"
        data-aos="fade-down"
        data-aos-duration="800"
      >
        Los detalles
      </h1>

      <Ornamento1
        class="w-1/2 mx-auto mb-6"
        style={`fill: ${colorPrimario}`}
        data-aos="fade-up"
        data-aos-delay="200"
      />

      <p class="text-lg text-gray-600 font-merriweather max-w-2xl mx-auto">
        Toda la información importante para que puedas acompañarnos en este día
        tan especial
      </p>
    </header>

    <!-- Cards Grid - Responsive -->
    <div class="grid gap-8 md:gap-12">
      <!-- Misa Card -->
      <article
        class="relative bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        <!-- Header with icon -->
        <div class="bg-gradient-to-r from-opacity-10 to-transparent p-8 pb-6">
          <div class="flex items-center gap-4 mb-4">
            <div
              class="p-4 rounded-2xl"
              style={`background-color: ${colorPrimario}15`}
            >
              <IglesiaIcon class="w-8 h-8" style={`fill: ${colorPrimario}`} />
            </div>
            <div>
              <h2 class="text-3xl font-abril text-gray-800">Misa</h2>
              <p class="text-gray-600 font-merriweather">Ceremonia religiosa</p>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="px-8 pb-8">
          <!-- Lugar -->
          <div class="mb-4">
            <h3 class="text-xl font-bold text-gray-800 mb-2">{misa.lugar}</h3>
          </div>

          <!-- Detalles -->
          <div class="space-y-3 mb-6">
            <!-- Hora -->
            <div class="flex items-center gap-3">
              <ClockIcon
                class="w-5 h-5 flex-shrink-0"
                style={`fill: ${colorPrimario}`}
              />
              <span class="font-merriweather text-gray-700">
                <strong>Hora:</strong>
                {misa.hora}
              </span>
            </div>

            <!-- Dirección -->
            <div class="flex items-start gap-3">
              <ImportanteIcon
                class="w-5 h-5 mt-0.5 flex-shrink-0"
                style={`fill: ${colorPrimario}`}
              />
              <span class="font-merriweather text-gray-700">
                <strong>Dirección:</strong>
                {misa.direccion}
              </span>
            </div>
          </div>

          <!-- Action button -->
          <a
            href={misa.maps}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-white font-merriweather px-6 py-3 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-4 focus:ring-opacity-30"
            style={`background-color: ${colorPrimario}; focus-ring-color: ${colorPrimario}`}
            aria-label="Ver ubicación de la misa en Google Maps"
          >
            <span>Ver ubicación</span>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
          </a>
        </div>
      </article>

      <!-- Recepción Card -->
      <article
        class="relative bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        <!-- Header with icon -->
        <div class="bg-gradient-to-r from-opacity-10 to-transparent p-8 pb-6">
          <div class="flex items-center gap-4 mb-4">
            <div
              class="p-4 rounded-2xl"
              style={`background-color: ${colorPrimario}15`}
            >
              <SalonIcon class="w-8 h-8" style={`fill: ${colorPrimario}`} />
            </div>
            <div>
              <h2 class="text-3xl font-abril text-gray-800">Recepción</h2>
              <p class="text-gray-600 font-merriweather">
                Fiesta y celebración
              </p>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="px-8 pb-8">
          <!-- Lugar -->
          <div class="mb-4">
            <h3 class="text-xl font-bold text-gray-800 mb-2">
              {recepcion.lugar}
            </h3>
          </div>

          <!-- Detalles -->
          <div class="space-y-3 mb-6">
            <!-- Hora -->
            <div class="flex items-center gap-3">
              <ClockIcon
                class="w-5 h-5 flex-shrink-0"
                style={`fill: ${colorPrimario}`}
              />
              <span class="font-merriweather text-gray-700">
                <strong>Hora:</strong>
                {recepcion.hora}
              </span>
            </div>

            <!-- Dirección -->
            <div class="flex items-start gap-3">
              <ImportanteIcon
                class="w-5 h-5 mt-0.5 flex-shrink-0"
                style={`fill: ${colorPrimario}`}
              />
              <span class="font-merriweather text-gray-700">
                <strong>Dirección:</strong>
                {recepcion.direccion}
              </span>
            </div>
          </div>

          <!-- Action button -->
          <a
            href={recepcion.maps}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-white font-merriweather px-6 py-3 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-4 focus:ring-opacity-30"
            style={`background-color: ${colorPrimario}; focus-ring-color: ${colorPrimario}`}
            aria-label="Ver ubicación de la recepción en Google Maps"
          >
            <span>Ver ubicación</span>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
          </a>
        </div>
      </article>

      <!-- Vestimenta Card -->
      <article
        class="relative bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
        data-aos="fade-up"
        data-aos-delay="500"
      >
        <!-- Header with icon -->
        <div class="bg-gradient-to-r from-opacity-10 to-transparent p-8 pb-6">
          <div class="flex items-center gap-4 mb-4">
            <div
              class="p-4 rounded-2xl"
              style={`background-color: ${colorPrimario}15`}
            >
              <VestimentaIcon
                class="w-8 h-8"
                style={`fill: ${colorPrimario}`}
              />
            </div>
            <div>
              <h2 class="text-3xl font-abril text-gray-800">Dress Code</h2>
              <p class="text-gray-600 font-merriweather">
                Código de vestimenta
              </p>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="px-8 pb-8">
          <div
            class="bg-gradient-to-r p-6 rounded-2xl"
            style={`background: linear-gradient(135deg, ${colorPrimario}10, ${colorPrimario}05)`}
          >
            <h3
              class="text-2xl font-bold mb-3"
              style={`color: ${colorPrimario}`}
            >
              Vestimenta Formal
            </h3>
            <p class="text-gray-700 font-merriweather leading-relaxed">
              Te pedimos que nos acompañes con vestimenta formal para hacer de
              esta noche una celebración elegante y memorable.
            </p>
          </div>
        </div>
      </article>
    </div>

    <!-- Decorative background -->
    {
      imagenes.flowers && (
        <div
          class="absolute top-0 right-0 w-64 h-64 opacity-5 pointer-events-none hidden lg:block"
          style={`background-image: url(${imagenes.flowers}); background-size: contain; background-repeat: no-repeat; background-position: center;`}
          aria-hidden="true"
        />
      )
    }
  </div>
</section>
