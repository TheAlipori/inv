---
const { imagenes, quinceanera, fecha } = Astro.props;
import "@fontsource/parisienne";
import "@fontsource/abril-fatface";
import "@fontsource/niconne";
import ScrollIcon from "../../../assets/icons/ScrollIcons.astro";
---

<section
  class="w-screen h-screen relative flex justify-center items-center"
  data-aos="fade-in"
  data-aos-duration="800"
>
  <!-- Contenedor de la imagen -->
  <div
    class="w-full h-full overflow-hidden flex justify-center items-center"
    data-aos="fade-up"
    data-aos-delay="200"
    data-aos-duration="1000"
  >
    <!-- ðŸ“¸ Imagen principal -->
    <img
      src={imagenes.portada}
      alt="Portada"
      class="w-full h-full object-cover lg:object-contain object-center"
      data-aos="zoom-out"
      data-aos-delay="400"
      data-aos-duration="1200"
      data-aos-easing="ease-out-cubic"
    />
  </div>

  <!-- Ãcono de scroll -->
  <div
    class="absolute bottom-0"
    data-aos="fade-left"
    data-aos-delay="300"
    data-aos-duration="1200"
    data-aos-easing="ease-out-quad"
  >
    <ScrollIcon class="size-16 animate-bounce ml-auto mt-8 stroke-white" />
  </div>

  <!-- Encabezados -->
  <div
    class="absolute top-0 text-white text-center mt-4"
    data-aos="fade-down"
    data-aos-delay="300"
    data-aos-duration="900"
  >
    <h1
      class="font-abril text-shadow-lg/100 text-2xl"
      data-aos="zoom-in"
      data-aos-delay="400"
    >
      Mis XV
    </h1>

    <h1
      class="font-niconne text-4xl text-shadow-lg/100"
      data-aos="zoom-in"
      data-aos-delay="500"
    >
      {quinceanera.nombre}
    </h1>

    <!-- Fecha -->
    <div
      class="flex flex-wrap justify-center items-center gap-x-4 text-4xl"
      data-aos="fade-up"
      data-aos-delay="600"
    >
      <h1
        class="font-abril text-shadow-lg/100"
        data-aos="fade-up"
        data-aos-delay="700"
      >
        {fecha.dia}
      </h1>
      <h1 class="text-shadow-lg/100" data-aos="fade-up" data-aos-delay="750">
        .
      </h1>
      <h1
        class="font-abril text-shadow-lg/100"
        data-aos="fade-up"
        data-aos-delay="800"
      >
        {fecha.mes}
      </h1>
      <h1 class="text-shadow-lg/100" data-aos="fade-up" data-aos-delay="850">
        .
      </h1>
      <h1
        class="font-abril text-shadow-lg/100"
        data-aos="fade-up"
        data-aos-delay="900"
      >
        {fecha.anio}
      </h1>
    </div>
  </div>
</section>
