---
interface Props {
  imagenes: {
    portada: string;
  };
  novios: {
    novia: string;
    novio: string;
  };
  colorPrimario: string;
  colorSecundario: string;
  colorTerciario?: string;
  fecha: {
    dia: string;
    mes: string;
    anio: string;
  };
}

const { imagenes, novios, colorPrimario, colorSecundario, colorTerciario, fecha } = Astro.props;
---

<section class="relative h-screen flex items-center justify-center text-center"
  style={`background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(${imagenes.portada}); background-size: cover; background-position: center;`}>
  <div class="text-white space-y-6" data-aos="fade-up" data-aos-duration="1500">
    <h1 class="text-6xl font-serif font-light tracking-wider" style={`color: ${colorTerciario || '#FFFFFF'}`}>
      {novios.novia} & {novios.novio}
    </h1>
    <p class="text-2xl font-light" style={`color: ${colorSecundario}`}>
      {fecha.dia} de {fecha.mes} de {fecha.anio}
    </p>
    <div class="w-32 h-0.5 mx-auto" style={`background-color: ${colorPrimario}`} data-aos="scale-x-in" data-aos-delay="800"></div>
    <p class="text-lg font-light" style={`color: ${colorTerciario || '#FFFFFF'}`}>
      Te invitamos a celebrar nuestro amor
    </p>
  </div>
</section>